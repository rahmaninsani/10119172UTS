<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dimen24"
    android:layout_marginEnd="@dimen/dimen24">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="@dimen/dimen16">

        <ImageView
            android:id="@+id/walkthrough_illustration"
            android:layout_width="@dimen/dimen264"
            android:layout_height="@dimen/dimen264"
            android:layout_gravity="center"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/walkthrough_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen32"
            android:layout_gravity="center"
            android:textAlignment="center"
            style="@style/TextNunitoBoldWhite24"/>

        <TextView
            android:id="@+id/walkthrough_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen32"
            android:layout_marginBottom="@dimen/dimen32"
            android:layout_gravity="center"
            android:textAlignment="center"
            style="@style/TextRubikRegularWhite16" />

    </LinearLayout>

</RelativeLayout>